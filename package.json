{
  "type": "module",
  "scripts": {
    "start": "node app.js",
    "dev": "node --watch app.js",
    "db:populate": "node -e \"import('./db/init.js').then(m => m.initDatabase())\"",
    "db:check": "node -e \"import('./db/init.js').then(m => m.checkDatabase().then(exists => console.log(exists ? '✅ Database exists' : '❌ Database needs initialization')))\""
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "connect-pg-simple": "^10.0.0",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.2.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.3.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3"
  }
}
